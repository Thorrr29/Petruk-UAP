#include <iostream>
#include <vector>
#include <string>
#include <unordered_map>
#include <iomanip>
#include <fstream>
#include <cstdlib>

using namespace std;

template <typename T>
struct CakeSize {
    T size;
    double price;
};

template <typename T>
struct Cake {
    T name;
    T description;
    vector<CakeSize<T>> sizes;
};

template <typename T>
struct Order {
    T cakeName;
    T size;
    double price;
    bool confirmed;
};

template <typename T>
class User {
public:
    T username;
    T password;
    vector<Order<T>> orders;
};

template <typename T>
class Bakery {
private:
    vector<Cake<T>> cakes;
    unordered_map<T, User<T>> users;
    User<T>* loggedInUser = nullptr;

void loadUsersFromFile() {
        ifstream file("data.txt");
        if (file.is_open()) {
            T username, password;
            while (file >> username >> password) {
                users[username] = {username, password};
            }
            file.close();
        }
    }
